<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:id="@+id/rdg_printables"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title_printables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFA000"
        android:elevation="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Seleccione impresion"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_below="@+id/txt_title_printables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbt_Gafetes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credenciales"/>
        <RadioButton
            android:id="@+id/rbt_Diplomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diplomas"/>
        <RadioButton
            android:id="@+id/rbt_Traslado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cartas Traslado"/>
        <RadioButton
            android:id="@+id/rbt_Boletas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boletas"/>
        <RadioButton
            android:id="@+id/rbt_Conducta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carta Buena Conducta"/>
        <RadioButton
            android:id="@+id/rbt_Parcial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parciales"/>
        <RadioButton
            android:id="@+id/rbt_Estadistica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadistica"/>
        <RadioButton
            android:id="@+id/rbt_Matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matricula"/>




    </RadioGroup>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>