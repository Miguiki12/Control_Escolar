<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_Tareas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        app:cardElevation="6dp"
        app:contentPadding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_matter_Partial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:background="#FFA000"
                android:elevation="15dp"
                android:gravity="center"
                android:padding="1dp"
                android:text="MATERIA           "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_number_Partial"
                android:layout_width="44dp"
                android:layout_height="109dp"
                android:text="1"
                android:textSize="80dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_matter_Partial" />


            <TextView
                android:id="@+id/txt_Inicio_Parcial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="01-02-2023"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txt_number_Partial"
                app:layout_constraintTop_toBottomOf="@+id/txt_de_"
                tools:layout_editor_absoluteX="94dp" />

            <TextView
                android:id="@+id/txt_Fin_Parcial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="01-02-2023"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/txt_number_Partial"
                app:layout_constraintTop_toBottomOf="@+id/txt_al_"
                tools:layout_editor_absoluteX="96dp" />

            <TextView
                android:id="@+id/txt_de_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                app:layout_constraintStart_toEndOf="@+id/txt_number_Partial"

                app:layout_constraintTop_toBottomOf="@+id/txt_matter_Partial"
                tools:layout_editor_absoluteY="24dp" />

            <TextView
                android:id="@+id/txt_al_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Fin"
                app:layout_constraintStart_toEndOf="@+id/txt_number_Partial"
                app:layout_constraintTop_toBottomOf="@+id/txt_Inicio_Parcial"
                tools:layout_editor_absoluteX="96dp" />

            <ImageView
                android:id="@+id/image_Options_Partial"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="28dp"
                android:src="@drawable/more"
                app:layout_constraintStart_toEndOf="@+id/txt_matter_Partial"
                tools:layout_editor_absoluteY="99dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>