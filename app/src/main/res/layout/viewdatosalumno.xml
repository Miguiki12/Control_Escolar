<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="#0BD5EF"
        tools:context=".act_Alumno">



        <androidx.cardview.widget.CardView
            android:id="@+id/card_datospersonales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"

            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:contentPadding="4dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


                <TextView
                    android:id="@+id/txtObligatorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#1A8AF9"
                    android:elevation="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Datos del Alumno"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />





                <EditText
                    android:id="@+id/txtNombre_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtObligatorios"
                    android:hint="Nombre"
                    android:inputType="textCapSentences" />


                <EditText
                    android:id="@+id/txtApellidop_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtNombre_alumno"
                    android:hint="Apellido paterno"
                    android:inputType="textCapSentences" />

                <EditText
                    android:id="@+id/txtApellidom_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtApellidop_alumno"
                    android:hint="Apellido materno"
                    android:inputType="textCapSentences" />

                <Spinner
                    android:id="@+id/cbxSexo_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/txtApellidom_alumno"
                    android:layout_marginTop="10dp"
                    android:entries="@array/Sexo"
                    android:prompt="@string/ciclo"
                    android:spinnerMode="dialog" />


               <!-- <EditText
                    android:id="@+id/txtEdad_alumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtApellidom_alumno"
                    android:hint="Edad"
                    android:inputType="textPersonName"
                    android:maxLength="2" />




                <TextView
                    android:id="@+id/txtFeha_nacimiento_alumno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cbxSexo_alumno"
                    android:text="FECHA DE NACIMIENTO"
                    android:textColor="#FF5722"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:drawableLeftCompat="@android:drawable/ic_menu_today" />

                <DatePicker
                    android:id="@+id/date_FechanacimientoAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/txtFeha_nacimiento_alumno"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />


                <Button
                    android:id="@+id/btnRegistrarAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/date_FechanacimientoAlumno"
                    android:backgroundTint="#1A8AF9"
                    android:text="REGISTRAR ALUMNO"
                    android:textColor="#FBFBFB"
                    android:textColorLink="#FFFFFF"
                    android:textSize="18dp" />-->




            </RelativeLayout>
        </androidx.cardview.widget.CardView>

